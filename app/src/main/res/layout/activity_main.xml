<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Cdegree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Cdegree" />

        <EditText
            android:id="@+id/Cdegreetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="14"
            android:inputType="textPersonName"
            android:text="@string/Cdegreetext"
            android:labelFor="@id/Cdegreetext"
            android:autofillHints=""
            />

        <TextView
            android:id="@+id/Fdegree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Fdegree" />

        <EditText
            android:id="@+id/Fdegreetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="14"
            android:inputType="textPersonName"
            android:text="@string/Fdegreetext"
            android:labelFor="@id/Fdegreetext"
            android:autofillHints=""
            />

        <Button
            android:id="@+id/btConvertFtoC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/FToC" />

        <Button
            android:id="@+id/btConvertCtoF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/CToF"
            android:onClick="ConvertCtoF"
            />




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>